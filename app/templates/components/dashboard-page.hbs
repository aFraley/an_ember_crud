<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <table class="table">
        <tr>
          <th>Name</th>
          <th>Age</th>
        </tr>
        {{#each model as |person|}}
          <tr>
            {{#link-to 'dashboard.person' person.id}}
              <td>{{person.name}}</td>
            {{/link-to}}
            <td>{{person.age}}</td>
          </tr>
        {{/each}}
      </table>
    </div>
    <div class="col-lg-4">
      <h2>Create a New Record</h2>
      <form {{action 'createPerson' this on='submit'}}>
        <div class="form-group">
          <label for="name">Name:</label>
          {{input name='name' value=name class='form-control'}}
        </div>
        <div class="form-group">
          <label for="age">Age:</label>
          {{input name='age' value=age class='form-control'}}
        </div>
        <button class="btn btn-default" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>
